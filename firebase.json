{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/*",
        "headers": [
          { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive, nosnippet" },
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
          { "key": "Pragma", "value": "no-cache" }
        ]
      }
    ]
  }
}